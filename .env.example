# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY_SECRET=your-secret-key-here
RATE_LIMIT_PER_HOUR=100

# LLM Configuration (Choose one)
# Option A: Ollama (FREE - Local LLM, Recommended)
USE_OLLAMA=true
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama3.2:3b

# Option B: OpenAI (Costs money - only if not using Ollama)
OPENAI_API_KEY=sk-your-openai-key-here
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Database (Docker defaults)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=clinical_guidelines
POSTGRES_USER=clinicaluser
POSTGRES_PASSWORD=clinicalpass
DATABASE_URL=postgresql://clinicaluser:clinicalpass@localhost:5432/clinical_guidelines

# Elasticsearch (Changed from default 9200 to avoid conflicts)
ELASTICSEARCH_URL=http://localhost:9201
ELASTICSEARCH_INDEX=clinical_documents

# Vector DB (Milvus)
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION=document_embeddings

# Weaviate (Alternative)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_CLASS=ClinicalDocument

# Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=clinical-docs
MINIO_SECURE=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Temporal
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default

# Observability
PROMETHEUS_PORT=9090
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Agent Configuration
QUERY_FILTER_TEMPERATURE=0.3
RETRIEVER_TOP_K=20
RETRIEVER_RERANK_TOP_K=10
SUMMARIZER_TEMPERATURE=0.4
FACT_CHECK_TEMPERATURE=0.1
WRITER_TEMPERATURE=0.5
BRIEF_MAX_WORDS=300

# Quality Thresholds
MIN_SOURCE_QUALITY=0.7
MIN_CITATION_CONFIDENCE=0.8
MAX_CONTRADICTION_SCORE=0.3

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
